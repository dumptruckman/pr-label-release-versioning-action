{
  "name": "pr-label-release-versioning-action",
  "version": "0.0.0",
  "private": true,
  "description": "A GitHub Action that creates versioned releases based on labels from merged pull requests.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dumptruckman/pr-label-release-versioning-action.git"
  },
  "bugs": {
    "url": "https://github.com/dumptruckman/pr-label-release-versioning-action/issues"
  },
  "keywords": [
    "github",
    "actions",
    "release",
    "versioning",
    "pr",
    "label",
    "node"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx local-action . src/main.ts .env",
    "package": "npx rollup -c rollup.config.mjs",
    "package:watch": "npx rollup -c rollup.config.mjs -w",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@github/local-action": "^2.1.3",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "rollup": "^4.24.4",
    "rollup-plugin-license": "^3.5.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
}
